<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_horizontal"
    android:orientation="horizontal"
    tools:context="com.example.usuario.bestspanishwines.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/medium_brown" />

        <!-- NORTH -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/north"
                style="@style/CategoryStyle"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/region_north" />

        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/medium_brown" />

        <!-- SOUTH -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/south"
                style="@style/CategoryStyle"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/region_south" />

        </FrameLayout>

        <!-- CENTER -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/center"
                style="@style/CategoryStyle"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/region_center" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/medium_brown" />

        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/medium_brown" />

        <!-- SOUTHWEST -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/southwest"
                style="@style/CategoryStyle"
                android:gravity="center"
                android:text="@string/region_southwest" />

        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/medium_brown" />

    </LinearLayout>

</LinearLayout>